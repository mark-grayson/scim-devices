        "required": true,
        "caseExact": false,
        "mutability": "readWrite",
        "returned": "default",
        "uniqueness": "Manufacturer"
      },
      {
        "name": "createdOn",
        "type": "string",
        "description": "Provides a yang:data-and-time encoding of the date the voucher was created.",
